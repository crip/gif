/*------------------------------------*\
    $MASTER
\*------------------------------------*/

$brand-color = #1D2327
$base-ui-color = #F6F8FB
$link-color = #4A85D3
$base-font-family = "brandon-grotesque", "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, arial, sans-serif;

*, *:before, *:after
  box-sizing border-box

.cf
  &:after
    visibility hidden
    display block
    font-size 0
    content " "
    clear both
    height 0

body
  background-color $brand-color
  font-family $base-font-family
  color $base-ui-color
  margin 0
  padding 0

.header
  @extend .cf
  position relative
  height 80px

.logo
  position absolute
  display block
  text-indent -9999px
  font-size 10px
  width 4.5em
  height 5em
  margin 0
  top 50%
  left 10px
  transform translateY(-50%)
  
  a
    width 100%
    height 100%
    display block
    background transparent url('/public/images/logo.svg') center center no-repeat
    background-size 100% 100%


.show-all
  color $brand-color
  text-decoration none
  position absolute
  top 50%
  right 10px
  transform translateY(-50%)
  display block
  font-weight bold
  text-transform uppercase
  font-size 12px
  letter-spacing 1px
  background-color $base-ui-color
  line-height 2.4
  padding 0 1.5em
  border-radius 4em
  transition background-color .2s ease
  
  &:hover
    background-color $link-color
    color $base-ui-color



/**
 * The gif
 */
.the-gif
  @extend .cf
  position absolute
  display block
  width 600px
  margin 0em 1em
  top 50%
  left 50%
  transform translate(-50%, -50%)
   
  img
    display block
    width 100%
    height auto

  @media (max-width: 600px)
    width 100%

.gif-nav
  @extend .cf
  background-color darken($brand-color, 10%)
  position relative
  width 100%
  height 40px
  padding 0em 1em

.nav-btn
  margin-right 1.2em
  float left
  display block
  position relative
  top 50%
  transform translateY(-50%)
  text-indent -9999px
  
  &:before
    content ''
    display block
    width 0
    height 0
    border-color transparent
    border-bottom-color #F6F8FB
    border-width 6px
    border-style solid
    position absolute
    top 108%
    left 50%
    transform translateX(-50%)    
    opacity 0
    visibility hidden
    transition .2s all ease
  
  &:after
    content attr(title)
    display block
    position absolute
    color $brand-color
    text-indent initial
    background-color #F6F8FB
    white-space nowrap
    font-size 14px
    font-weight bold
    top 150%
    left 50%
    padding .25em 1em
    border-radius 3px
    text-align center
    transform translateX(-50%)
    opacity 0
    visibility hidden
    transition .2s all ease
    
  &:hover
    &:before, &:after
      opacity 1
      visibility visible

.nav-btn--shuffle
  background transparent url('/public/images/reload.svg') center center no-repeat
  background-size 100% 100%
  font-size 10px
  width 2.5em
  height 2.5em

.nav-btn--expand
  background transparent url('/public/images/expand.svg') center center no-repeat
  background-size 100% 100%
  font-size 10px
  width 2.5em
  height 2.5em

.nav-btn--full
  background transparent url('/public/images/link.svg') center center no-repeat
  background-size 100% 100%
  font-size 10px
  width 2.5em
  height 2.5em

.gif-title
  float right
  display block
  position relative
  top 50%
  transform translateY(-50%)
  margin 0
  font-weight 500
  font-size 14px




/**
 * List gifs
 */
 
.list-gifs
  display -webkit-flex
  display -moz-flex
  display -ms-flex
  display -o-flex
  display flex
  margin 0
  padding 0
  list-style none
  justify-content center
  flex-direction row
  flex-wrap wrap
  align-items center
  align-content center
  position absolute
  top 80px
  left 0
  right 0
  bottom 0
  
  li
    text-align center
    
    a
      text-decoration none
      background-color $base-ui-color
      color $brand-color
      display block
      line-height 2.2
      padding 0em 1.5em
      margin .5em
      border-radius 10em
      transition background-color .2s ease
  
      &:hover
        background-color $link-color
        color $base-ui-color
